<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/status_bar_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvCurrentText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="@string/txt_current"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/status_bar_text_size"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tvCurrent"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/tvCurrentText"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/status_bar_text_size"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tvVoltageText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/tvCurrent"
        android:gravity="center_vertical"
        android:text="@string/txt_voltage"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/status_bar_text_size"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tvVoltage"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/tvVoltageText"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/status_bar_text_size"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/ivGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ivBluetooth" />

    <ImageView
        android:id="@+id/ivBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/ivWifiSignal" />

    <ImageView
        android:id="@+id/ivWifiSignal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ivNetworkSignal" />

    <ImageView
        android:id="@+id/ivNetworkSignal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/tvBattery" />

    <TextView
        android:id="@+id/tvBattery"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_toStartOf="@id/ivBattery"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/status_bar_text_size"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/ivBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:layout_toStartOf="@id/tClock" />

    <TextClock
        android:id="@+id/tClock"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/status_bar_text_size"
        tools:ignore="RtlCompat" />

</RelativeLayout>
