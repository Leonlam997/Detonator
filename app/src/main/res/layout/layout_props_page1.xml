<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/et_wv"
        android:text="@string/title_text_work_voltage"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_text_size" />

    <EditText
        android:id="@+id/et_wv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="350dp"
        android:autofillHints=""
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:textAlignment="center"
        android:textSize="@dimen/common_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="310dp"
        android:text="@string/text_voltage_unit"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_text_size" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_set_wv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/btn_get_wv"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/button_set"
        android:textColor="@color/colorButtonEnabled"
        android:textSize="@dimen/common_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_wv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/button_get"
        android:textColor="@color/colorButtonEnabled"
        android:textSize="@dimen/common_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_wv"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/et_dac"
        android:text="@string/title_text_dac"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_text_size" />

    <EditText
        android:id="@+id/et_dac"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_wv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="350dp"
        android:autofillHints=""
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="4"
        android:textAlignment="center"
        android:textSize="@dimen/common_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_set_dac"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_set_wv"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/btn_get_dac"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/button_set"
        android:textColor="@color/colorButtonEnabled"
        android:textSize="@dimen/common_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_dac"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_get_wv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/button_get"
        android:textColor="@color/colorButtonEnabled"
        android:textSize="@dimen/common_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_dac"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@id/et_current"
        android:text="@string/title_text_current"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_text_size" />

    <EditText
        android:id="@+id/et_current"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_dac"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="350dp"
        android:autofillHints=""
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="4"
        android:textAlignment="center"
        android:textSize="@dimen/common_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_dac"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="300dp"
        android:text="@string/text_current_unit"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_set_current"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_set_dac"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/btn_get_current"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/button_set"
        android:textColor="@color/colorButtonEnabled"
        android:textSize="@dimen/common_text_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_current"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_get_dac"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/button_get"
        android:textColor="@color/colorButtonEnabled"
        android:textSize="@dimen/common_text_size" />
</RelativeLayout>