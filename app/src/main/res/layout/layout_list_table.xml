<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/line_row"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/colorTableLine" />

    <TextView
        android:id="@+id/text_row"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:singleLine="true"
        android:text="@string/table_row"
        android:textColor="#000000"
        android:textSize="@dimen/small_text_size" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/colorTableLine" />

    <TextView
        android:id="@+id/text_hole"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:singleLine="true"
        android:text="@string/table_hole"
        android:textColor="#000000"
        android:textSize="@dimen/small_text_size" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/colorTableLine" />

    <TextView
        android:id="@+id/text_inside"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:singleLine="true"
        android:text="@string/table_inside"
        android:textColor="#000000"
        android:textSize="@dimen/small_text_size" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/colorTableLine" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:singleLine="true"
        android:text="@string/table_address"
        android:textColor="#000000"
        android:textSize="@dimen/small_text_size" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/colorTableLine" />
</LinearLayout>