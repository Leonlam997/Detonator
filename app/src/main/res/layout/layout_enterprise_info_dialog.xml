<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:button="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorActionbarBackground"
        android:gravity="center"
        android:text="@string/settings_enterprise"
        android:textColor="@color/colorDialogText"
        android:textSize="@dimen/label_text_size" />

    <TextView
        android:id="@+id/txt_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/enterprise_code"
        android:textColor="@color/colorLabelText"
        android:textSize="@dimen/dialog_enterprise_text" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/txt_code"
        android:textSize="@dimen/dialog_enterprise_text" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_code"
        android:layout_marginTop="4dp"
        android:background="@color/colorTableLine" />

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_code"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/enterprise_id"
        android:textColor="@color/colorLabelText"
        android:textSize="@dimen/dialog_enterprise_text" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_code"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/txt_id"
        android:maxLength="18"
        android:textSize="@dimen/dialog_enterprise_text" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_id"
        android:layout_marginTop="4dp"
        android:background="@color/colorTableLine" />

    <RelativeLayout
        android:id="@+id/rl_commercial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_id">

        <TextView
            android:id="@+id/txt_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/enterprise_contract"
            android:textColor="@color/colorLabelText"
            android:textSize="@dimen/dialog_enterprise_text" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_contract"
            android:layout_marginTop="4dp"
            android:background="@color/colorTableLine" />

        <TextView
            android:id="@+id/tv_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/txt_contract"
            android:textSize="@dimen/dialog_enterprise_text" />

        <TextView
            android:id="@+id/txt_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_contract"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/enterprise_project"
            android:textColor="@color/colorLabelText"
            android:textSize="@dimen/dialog_enterprise_text" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_project"
            android:layout_marginTop="4dp"
            android:background="@color/colorTableLine" />

        <TextView
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_contract"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/txt_project"
            android:textSize="@dimen/dialog_enterprise_text" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:columnCount="2"
        android:orientation="horizontal">

        <com.leon.detonator.base.MyButton
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:padding="0dp"
            android:text="@string/button_confirm"
            android:textColor="@color/colorButtonEnabled"
            android:textSize="@dimen/button_text_size"
            button:bigButton="false"
            button:keyCode="1" />

        <com.leon.detonator.base.MyButton
            android:id="@+id/btn_dialog_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:padding="0dp"
            android:text="@string/button_modify"
            android:textColor="@color/colorButtonEnabled"
            android:textSize="@dimen/button_text_size"
            button:bigButton="false"
            button:keyCode="2" />
    </GridLayout>

</RelativeLayout>