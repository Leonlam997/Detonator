<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:src="@mipmap/ic_selected" />

    <TextView
        android:id="@+id/tvSSID"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivSelected"
        android:gravity="center_vertical"
        android:text="@string/settings_bt_visible"
        android:textColor="@android:color/black"
        android:textSize="@dimen/label_text_size" />

    <ProgressBar
        android:id="@+id/pbScan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tvSSID" />

    <CheckBox
        android:id="@+id/cbWifi"
        style="@style/SettingsCheckBoxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tvRescan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:text="@string/settings_bt_rescan"
        android:textColor="@color/colorRescanText"
        android:textSize="@dimen/label_text_size" />

    <ImageView
        android:id="@+id/ivLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:src="@mipmap/ic_wifi_signal_4" />

    <ImageView
        android:id="@+id/ivLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/ivLevel"
        android:src="@mipmap/ic_lock" />

    <ImageView
        android:id="@+id/ivSaved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/ivLock"
        android:src="@mipmap/ic_saved" />

    <ProgressBar
        android:id="@+id/pbConnect"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/ivSaved" />

</RelativeLayout>