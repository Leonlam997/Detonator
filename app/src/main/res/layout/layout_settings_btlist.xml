<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:src="@mipmap/ic_alert_bluetooth" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivType"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="@dimen/label_text_size" />

    <ProgressBar
        android:id="@+id/pbScan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tvName" />

    <CheckBox
        android:id="@+id/cbBT"
        style="@style/SettingsCheckBoxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tvRescan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:text="@string/settings_bt_rescan"
        android:textColor="@color/colorRescanText"
        android:textSize="@dimen/label_text_size" />

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/ic_right_arrow" />

</RelativeLayout>