<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivMenuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="26dp"
        android:src="@mipmap/ic_settings_wifi" />

    <TextView
        android:id="@+id/tvMenuName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@id/ivMenuRight"
        android:layout_toEndOf="@id/ivMenuIcon"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/cbMenu"
        style="@style/SettingsCheckBoxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/ivMenuRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/ic_right_arrow" />

</RelativeLayout>