<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/detect_barcode"
        android:textColor="@color/colorInfoTitle"
        android:textSize="@dimen/table_text_size" />

    <TextView
        android:id="@+id/info_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:text="@string/detect_barcode"
        android:textColor="@color/colorINfoSubtitle"
        android:textSize="@dimen/dialog_sub_text" />
</LinearLayout>